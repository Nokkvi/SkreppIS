<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find_ride"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_skrepp"
    tools:context="com.app.skreppis.skreppis.FindRideActivity">

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/p_requestdriver"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/p_requestdriver"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@android:color/background_light"
            android:layout_margin="12dp"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="20dp"
            />

         <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/p_finddriver"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/p_finddriver"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@android:color/white"
            android:layout_margin="12dp"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="20dp"
             />

</LinearLayout>