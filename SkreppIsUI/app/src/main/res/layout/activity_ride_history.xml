<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_skrepp"
    tools:context="com.app.skreppis.skreppis.RideHistoryActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="380dp"
        android:layout_height="75dp"
        android:background="@drawable/background_border"
        android:textAppearance="@style/RideHistoryFields"
        android:text="Here you can see all of your rides, where you wentfsdafdsakljdaslfjkdslafjdkslafj jljfdskjljkljkljklj asfakdjfdkkjakfdasfkdsag"
        tools:layout_editor_absoluteY="26dp"
        tools:layout_editor_absoluteX="2dp" />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:fillViewport="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        tools:layout_editor_absoluteY="117dp"
        tools:layout_editor_absoluteX="0dp">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <RelativeLayout
             android:id="@+id/ride_history"
             android:layout_width="match_parent"
             android:layout_height="70dp"
             android:background="@drawable/background_border"
             android:orientation="vertical">

             <TextView
                 android:id="@+id/ride_history_from"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginLeft="2dp"
                 android:layout_marginTop="6dp"
                 android:text="From:"
                 android:textAppearance="@style/RideHistoryLabels" />

             <TextView
                 android:id="@+id/ride_history_from_field"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_margin="2dp"
                 android:layout_toRightOf="@+id/ride_history_from"
                 android:text="Keflavik"
                 android:textAppearance="@style/RideHistoryFields" />

             <TextView
                 android:id="@+id/ride_history_to"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="6dp"
                 android:layout_toLeftOf="@+id/ride_history_to_field"
                 android:text="To:"
                 android:textAppearance="@style/RideHistoryLabels" />

             <TextView
                 android:id="@+id/ride_history_to_field"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="true"
                 android:layout_margin="2dp"
                 android:text="Reykjavik"
                 android:textAppearance="@style/RideHistoryFields" />

             <TextView
                 android:id="@+id/ride_history_driver"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:layout_alignParentLeft="true"
                 android:layout_margin="2dp"
                 android:text="Driver: "
                 android:textAppearance="@style/RideHistoryLabels" />

             <TextView
                 android:id="@+id/ridehistory_driver_field"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:layout_margin="2dp"
                 android:layout_toRightOf="@id/ride_history_driver"
                 android:text="Nebbi"
                 android:textAppearance="@style/RideHistoryFields" />
             <TextView
                 android:id="@+id/ride_history_date_field"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:layout_alignParentRight="true"
                 android:layout_margin="2dp"
                 android:text="01-03-2017"
                 android:textAppearance="@style/RideHistoryFields" />

             <TextView

                 android:id="@+id/ride_history_date"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:layout_margin="2dp"
                 android:layout_toLeftOf="@id/ride_history_date_field"
                 android:text="Date: "
                 android:textAppearance="@style/RideHistoryLabels" />



         </RelativeLayout>

     </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
