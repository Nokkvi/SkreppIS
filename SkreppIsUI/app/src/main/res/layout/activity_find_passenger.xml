<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find_passenger"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_skrepp"
    android:gravity="center"
    tools:context="com.app.skreppis.skreppis.FindPassengerActivity">

    <TextView
        android:id="@+id/Text1"
        android:text="Where are you now?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/searchStart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:imeOptions="actionSend" />

    <TextView
        android:id="@+id/Text2"
        android:text="Where are you going?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/searchEnd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:imeOptions="actionSend" />

    <Button
        style="?android:attr/buttonBarButtonStyle"
        android:id="@+id/p_requestdriver"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/t_toggle_active"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@android:color/background_light"
        android:layout_margin="12dp"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20dp"
        />

    <Button
        style="?android:attr/buttonBarButtonStyle"
        android:id="@+id/p_finddriver"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/p_finddriver"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@android:color/white"
        android:layout_margin="12dp"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHit"
        android:text="HIT ME"/>

    <TextView
        android:id="@+id/JSONItem"
        android:text="abcd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
