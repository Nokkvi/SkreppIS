<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_skreppis">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="30dp"
        >

        <Button
            android:id="@+id/bt_find_ride"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@android:color/background_light"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:text="@string/p_findride"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/bt_find_passenger"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@android:color/background_light"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:text="@string/d_findpassenger"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/test_spinner"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:entries="@array/test_spinner"
            android:prompt="@string/find_driver_zone" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:id="@+id/requestList" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/messagebox_container_driver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>